# bindsym $mod+y  split v,exec --no-startup-id xfce4-terminal -T "xfce4-terminal"

# Kill focused window.
bindsym Shift+Escape kill
# Kill focused floating window. When killing popups this cannot kill
# the (tiled) parent (as can happen by accident).
bindsym $mod+Shift+Escape [floating] kill

# Start dmenu (a program launcher).
# bindsym $mod+d exec dmenu_run


bindsym $mod+Control+f      exec --no-startup-id i3fyra --float
# making a floating window tiled with the keybinding
# above will automatically enable the i3fyra layout
# on the active workspace.

# splitsizes in the i3fyra layout
# -----------------------------------------------
set $layout 'AB=-350 AC=220 BD=252'

# by executing below command with i3 the layout
# will be configured before it is created
exec --no-startup-id i3fyra --layout $layout

# use this keybinding to restore the layout
bindsym $mod+Shift+f exec --no-startup-id i3fyra --layout $layout       


bindsym $mod+Tab              exec --no-startup-id i3flip next
bindsym $mod+Shift+Tab        exec --no-startup-id i3flip perv



bindsym $mod+t            exec --no-startup-id i3viswiz left
bindsym $mod+n            exec --no-startup-id i3viswiz down
bindsym $mod+l              exec --no-startup-id i3viswiz up
bindsym $mod+s           exec --no-startup-id i3viswiz right


