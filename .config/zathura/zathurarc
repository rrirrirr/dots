### Settings from original zathurarc ###
set adjust-open             'best-fit'
set page-padding            '1'
set render-loading          'false'
set sandbox                 'none'
set selection-clipboard     'clipboard'
set smooth-scroll           'true'
set statusbar-home-tilde    'true'
set window-title-home-tilde 'true'

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'


# Default foreground/background color
set default-bg rgba(100,100,100,0)

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#97bcb8'



set default-fg                "#C6D0F5"

set completion-bg		          "#414559"
set completion-fg		          "#C6D0F5"
set completion-highlight-bg	  "#575268"
set completion-highlight-fg	  "#C6D0F5"
set completion-group-bg		    "#414559"
set completion-group-fg		    "#8CAAEE"

set statusbar-fg		          "#C6D0F5"
set statusbar-bg		          "#414559"

set notification-bg		        "#414559"
set notification-fg		        "#C6D0F5"
set notification-error-bg	    "#414559"
set notification-error-fg	    "#E78284"
set notification-warning-bg	  "#414559"
set notification-warning-fg	  "#FAE3B0"

set inputbar-fg			          "#C6D0F5"
set inputbar-bg 		          "#414559"

set recolor-darkcolor		      "#C6D0F5"

set index-fg			            "#C6D0F5"
set index-bg			            "#303446"
set index-active-fg		        "#C6D0F5"
set index-active-bg		        "#414559"

set render-loading-bg		      "#303446"
set render-loading-fg		      "#C6D0F5"

set highlight-color		        "#575268"
set highlight-fg              "#F4B8E4"
set highlight-active-color	  "#F4B8E4"


unmap		 [normal] r
map			 [normal] r 		feedkeys :
unmap		 [normal] l
map			 [normal] l 		scroll up
unmap		 [normal] n 
map			 [normal] n			scroll down
unmap		 [normal] t 
map			 [normal] t 		scroll left
unmap		 [normal] s 
map			 [normal] s		  scroll right
unmap		 [normal] e
map			 [normal] e		  feedkeys /
unmap    [normal] <F10>		
map      [normal] <F10> search
unmap    [normal] <F11>	
map 		 [normal] <F11>	search backward
unmap    [normal] <F9>		
map 		 [normal] <F9>	search forward
unmap		 [normal] h
map			 [normal] h 		goto 
unmap		 [normal] v
map			 [normal] v 		zoom out
unmap		 [normal] w
map			 [normal] w			zoom in
