# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#97bcb8'
set statusbar-bg '#1c0222'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#9C5445'
set highlight-active-color '#9C5445'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#97bcb8'

# 'Loading...' text
set render-loading-fg '#97bcb8'
set render-loading-bg '#1c0222'

# Index mode
set index-fg '#97bcb8'
set index-bg '#1c0222'

# Selected element in index mode
set index-active-fg '#1c0222'
set index-active-bg '#97bcb8'